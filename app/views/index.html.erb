<ul id="tweets">
	<% for tweet in @tweets do %>
		<li class="entry <%= 'retweet' if tweet.is_retweet -%>">
			<% for media in tweet.media.to_s.split(",") do %>
				<div class="media"><%= image_tag("#{YAML::load(media)['source']}:large") %></div>
			<% end %>
			<div class="tweet"><%= render_tweet(tweet) %></div>
			<div class="clear">
		</li>
	<% end %>
</ul>