<ul class="social <%= link_class -%>">
  <li><%= link_to image_tag("link_icon.png"), scrapbook_entry_path(tweet.twitter_id), :title => "Link to this entry" %></li>
  <li><%= link_to image_tag("twitter_icon.png"), "https://twitter.com/share?url=#{scrapbook_entry_url(tweet.twitter_id)}&text=#{render_tweet(tweet)}&count=horizontal", :title => "Share on Twitter", :target => "_blank" %></li>
  <li><%= link_to image_tag("pinterest_icon.png"), "http://pinterest.com/pin/create/button/?url=#{scrapbook_entry_url(tweet.twitter_id)}&media=#{photo ? photo.image.url(:large, false) : scrapbook_entry_url(tweet.twitter_id)}&description=#{render_tweet(tweet)}", :title => "Share on Pinterest", :target => "_blank" %></li>
  <li><%= link_to image_tag("tumblr_icon.png"), "http://www.tumblr.com/share?v=3&u=#{escaped_for_urls(scrapbook_entry_url(tweet.twitter_id))}&t=#{render_tweet(tweet)}", :title => "Share on Tumblr", :target => "_blank" %></li>
  <li><%= link_to image_tag("facebook_icon.png"), "http://www.facebook.com/share.php?u=#{escaped_for_urls(photo ? "#{root_url}#{photo.image.url(:large, false).gsub(/^\//, '')}" : scrapbook_entry_url(tweet.twitter_id))}", :title => "Share on Facebook", :target => "_blank" %></li>
</ul>

